<!-- Home Page Container -->
<div class="container">

    <div class="mainHeading">
      <p class="heading" id="homeHeading">Projects</p>
        <a class="addProject" href="create_project"
          ><i class="fa-solid fa-plus"></i
        ></a>
      <div class="tooltip addProjectTooltip"><p>Create Project</p></div>
    </div>

    <div class="projectContainer">
      <!-- Rendering all the projects using forEach loop -->
        <% allProjects.forEach((project)=>{ %>
    
          <div class="box">

            <p class="projectName" id="title1" id="titlePro"><span id="title">Project&nbsp;:&nbsp;&nbsp;</span><%- project.projectName %></p>

            <p class="projectDesc"><span id="desc" style="font-weight: 600;">Description&nbsp;:&nbsp;&nbsp;</span><%- project.description %></p>

            <div class="boxFooter" id="boxFooterSection">
              
              <p class="projectAuthor" id="authorFooter">Author&nbsp;:&nbsp;<span class="name"> <em><%- project.authorName %></em></span></p>

                <div class="detailIssueLinks">

                  <p class="issueCount" id="issueFooter"> Issues Tracked&nbsp;:&nbsp; <span class="count" id="countFooter" style="font-weight: 600;"><em><%- project.issues.length %></em></span></p>
      
                  <!-- Tooltips when user hover over the icon present in links -->
                  <a class="projectDetails" style="margin-right: 2rem" href="project_details/<%- project.id %>"><i class="fa-solid fa-circle-info  boxLink"></i></a>
                    <div class="tooltip tooltipProjectDetails">
                      <p>Project Details</p>
                    </div>
                  <a class="createIssue" style="margin-right: 2rem" href="create_issue/<%- project.id %>"><i class="fa-solid fa-circle-plus boxLink"></i
                  ></a>
                  <div class="tooltip tooltipCreateIssue"><p>Create Issue</p></div>
                  <a class="deleteProject" style="margin-right: 2rem" href="/delete_project?id=<%- project.id %>&author=<%- project.authorName %>&name=<%- project.projectName %>">
                  <button id="trash"><i class="fa-solid fa-trash"></i></button>
                </a>
                <div class="tooltip tooltipDeleteProject">
                    <p>Delete Project</p>
                </div>
                
                   
                </div>
            </div>
          </div>
        <% }) %> 
      
    </div>
</div>